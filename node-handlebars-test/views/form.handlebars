{{#section 'title'}}
<h1 class="page-header">Form test</h1>
<!-- /.row -->
{{/section}}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Basic Form Elements
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        <form role="form">
                            <div class="form-group">
                                <label>Text Input with Placeholder</label>
                                <input id="input_form" class="form-control" placeholder="Enter text" type="password">
                            </div>
                            <button id="submit_form" type="submit" class="btn btn-default">Submit Button</button>
                            
                            <div class="alert alert-success alert-dismissable" style="display: none">
							  <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
							  <strong>Success!</strong> Safe password.
							</div>
							<div class="alert alert-info alert-dismissable" style="display: none">
							  <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
							  <strong>Info!</strong> Password must be at least 8 characters long contain a number, an uppercase letter, an lowercase and special characters.
							</div>
                        </form>
                    </div>
					
                    <!-- /.col-lg-6 (nested) -->
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

{{#section 'jquery'}}
	<script src="/jquery/form.js"></script>
{{/section}}